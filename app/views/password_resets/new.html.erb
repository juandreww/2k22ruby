<div class="mt-3 pt-3">
    <h1>Forgot your password?</h1>
</div>

<%= form_with url: password_reset_path do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "gatot@indonesiaku.com" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Reset Password", class: "btn btn-primary" %>
    </div>
<% end %>
<div class = "spacer-10"></div>